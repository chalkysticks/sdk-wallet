{
    "author": "ChalkySticks LLC",
    "bugs": {
        "url": "https://github.com/chalkysticks/sdk-wallet/issues"
    },
    "dependencies": {
        "@chalkysticks/mrm-preset": "github:chalkysticks/mrm-preset",
        "@chalkysticks/sdk-core": "github:chalkysticks/sdk-core"
    },
    "description": "ChalkySticks SDK core for web-based clients for Wallet and Payment",
    "devDependencies": {
        "@types/chai": "^4.2.14",
        "@types/mocha": "^8.2.0",
        "@typescript-eslint/eslint-plugin": "^4.13.0",
        "@typescript-eslint/parser": "^4.13.0",
        "chai": "^4.2.0",
        "eloquent-js": "github:mattkenefick/eloquentjs#v2",
        "eslint": "^7.17.0",
        "husky": "^6.0.0",
        "mocha": "^8.2.1",
        "nyc": "^15.1.0",
        "ts-mocha": "^8.0.0",
        "typescript": "^5.2.2"
    },
    "exports": {
        ".": {
            "import": "./build/esm/index.js",
            "require": "./build/cjs/index.js"
        }
    },
    "files": [
        "!**/*.spec.*",
        "!**/*.json",
        "build/esm",
        "build/module",
        "build/web",
        "CHANGELOG.md",
        "LICENSE",
        "README.md"
    ],
    "homepage": "https://www.chalkysticks.com",
    "keywords": [
        "billiards",
        "chalkysticks",
        "pool"
    ],
    "license": "GPL-3.0-or-later",
    "main": "./build/cjs/index.js",
    "module": "./build/esm/index.js",
    "name": "@chalkysticks/sdk-wallet",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/chalkysticks/sdk-wallet.git"
    },
    "scripts": {
        "build": "tsc -p tsconfig.json && tsc -p tsconfig.cjs.json && yarn build:web",
        "build:web": "./node_modules/.bin/esbuild src/index.ts --bundle --minify --sourcemap --target=chrome62 --format=esm --outfile=build/web/chalkysticks-wallet.js",
        "coverage": "nyc npm test",
        "example": "http-server",
        "lint": "eslint \"src/**/*.ts\"",
        "prepare": "husky install",
        "prettier": "prettier -c src/**/*.ts",
        "reinstall": "rm -rf ./node_modules/ && rm yarn.lock && yarn && yarn build",
        "test": "ts-mocha -p ./node_modules/@chalkysticks/mrm-preset/tsconfig.test.json test/**/*.spec.ts"
    },
    "types": "build/esm/index.d.ts",
    "version": "1.1.0"
}
